extends ../layout
block content
    .wrapper
        form.form-horizontal(method="post" id="resetForm")
            legend Reset Password
            .form-group
                .input-group
                    span.input-group-addon
                        span.fa.fa-fw.fa-key
                    input.form-control(type="password" name="password_confirmation" placeholder="Password" data-validation="length" data-validation-length="min6")
            .form-group
                .input-group
                    span.input-group-addon
                        span.fa.fa-fw.fa-key
                    input.form-control(type="password" name="password" placeholder="Confirm Password" data-validation="confirmation")
            button.btn.btn-primary(type="submit")
                span.fa.fa-lock
                | &nbsp;Update Password