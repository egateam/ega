extends ../layout
block content
    .wrapper
        form.form-horizontal(method="post" id="loginForm" action="/login")
            legend Login
            .form-group
                .input-group
                    span.input-group-addon
                        span.fa.fa-fw.fa-user
                    input.form-control(type="text" name="username" placeholder="Username" autofocus)
            .form-group
                .input-group
                    span.input-group-addon
                        span.fa.fa-fw.fa-key
                    input.form-control(type="password" name="password" placeholder="Password")
            button.btn.btn-primary(type="submit")
                span.fa.fa-user
                | &nbsp;Login
            a.btn.btn-link(href="/forgot") Forgot Password?
